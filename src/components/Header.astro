---
import ToolBar from "@components/ToolBar.astro"

import '@styles/global.min.css'
import '@styles/tailwind.min.css'
---
<section class="head-wrapper">
    <header class="header">
        <nav>
            <a href="/">首页</a>
            <a href="/blogs">归档</a>
            <a href="/notes/1">随笔</a>
            <a href="/about">关于</a>
        </nav>
        <div class="header-title">
            <h1 class="text">Cafe Blogs</h1>
            <p class="description"><span>代码</span>，<span>游戏</span>，以及<span>有趣的故事</span></p>
        </div>
    </header>
    <ToolBar />
</section>


<style lang="scss">
    // Header 通用头部 组件样式
    .head-wrapper {
        @apply relative mb-8 ;
        .header {
            @apply w-full h-[60px] flex justify-between mx-auto mb-4;
            transition: all .3s ease;
            nav {
                @apply flex order-2;
                a {
                    @apply flex w-24 justify-center items-center;
                    font-weight: 400;
                    font-family: 'PingFang SC', 'IBM Plex Sans', 'monospace';
                    font-size: 18px;
                    text-align: center;
                    color: var(--fontcolor1);
                    transition: all .25s ease;
                    border-bottom: 3px solid transparent;
                    &:hover {
                        color: var(--main-color);
                        text-decoration: none;
                        border-bottom: 3px solid var(--main-color);
                    }
                    @apply hover:dark:bg-[#11111344] hover:bg-[#f2f3f5FF] ;
                }
            }
            .header-title {
                @apply relative self-center order-1;
                .text {
                    font-family: 'FiraCodeR';
                    font-weight: 600;
                    font-size: 24px;
                    line-height: 32px;
                    letter-spacing: 1px;
                    color: var(--fontcolor1);
                    z-index: 10;
                }
                .description {
                    position: relative;
                    left: 0;
                    bottom: 0;
                    font-size: 16px;
                    vertical-align: middle;
                    color: var(--fontcolor3);
                    span {
                        transition: all .2s ease;
                        &:hover {
                            color: var(--main-color);
                        }
                    }
                }
            }
        }
    }

    // 移动端or小屏适配
    @media screen and (max-width: 786px) {
        .head-wrapper {
            .header {
                height: auto;
                @apply flex-wrap pt-8;
                nav {
                    @apply mt-8 w-full justify-center order-2 ;
                    a {
                        @apply text-base h-16 ; 
                    }
                }
                .header-title {
                    @apply pr-0 w-full text-center order-1;
                    .description {
                        @apply w-full left-1/2 transform -translate-x-1/2;
                    }
                }
            }
        }
    }
</style>
