---
import ToolBar from "@components/ToolBar.astro"

import '@styles/global.min.css'
import '@styles/tailwind.min.css'
---
<section class="head-wrapper">
    <header class="header">
        <nav>
            <a href="/">首页</a>
            <a href="/blogs">归档</a>
            <a href="/notes/1">随笔</a>
            <a href="/about">关于</a>
        </nav>
        <div class="header-title">
            <h1 class="title">Cafe Blogs</h1>
            <p class="description"><span>代码</span>，<span>游戏</span>，以及<span>有趣的故事</span></p>
        </div>
    </header>
    <ToolBar />
</section>


<style lang="scss">
    // Header 通用头部 组件样式
    .head-wrapper {
        @apply mb-8;
        width: 100%;
        position: relative;
        .header {
            @apply w-full mx-auto mb-8 ;
            display: flex;
            justify-content: space-between;
            height: 60px;
            transition: all .3s ease;
            box-sizing: content-box;
            nav {
                display: flex;
                order: 2;
                a {
                    @apply w-24 text-lg ;
                    display: flex;
                    justify-content: center;
                    align-items: center;
                    transition: all .25s ease;
                    border-bottom: 3px solid transparent;
                    &:hover {
                        border-bottom: 3px solid #000000;
                    }
                }
            }
            .header-title {
                @apply relative self-center order-1;
                .title {
                    @apply w-full text-4xl ;
                    font-weight: 600;
                    letter-spacing: 1px;
                    color: var(--fontcolor1);
                    z-index: 10;
                }
                .description {
                    @apply relative text-base ;
                    left: 0;
                    bottom: 0;
                    vertical-align: middle;
                    span {
                        transition: all .2s ease;
                        &:hover {
                            // color: var(--main-color);
                        }
                    }
                }
            }
        }
    }

    // 移动端or小屏适配
    @media screen and (max-width: 786px) {
        .head-wrapper .header {
            height: auto;
            @apply flex-wrap ;
            nav {
                @apply mt-8 w-full justify-center order-2 ;
                a {
                    @apply text-base h-16 ; 
                }
            }
            .header-title {
                @apply pr-0 w-full text-center ;
                order: 1;
                .title {
                    @apply text-3xl ;
                }
                .description {
                    @apply w-full left-1/2 transform -translate-x-1/2;
                }
            }
        }
    }
</style>
