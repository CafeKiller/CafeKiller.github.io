---
import BaseLayout from '@layouts/BaseLayout.astro'
import { createYearHistories } from '@utils/astroUtil'
import { formatDate } from '@utils/dateUtil'

import '@styles/global.min.css'

type navType = {
	url: string
	title: string
	date: Date
}

const fillterMd = createYearHistories()
---

<BaseLayout title="CafeBlogs Blogs">
	<main>
		{
			Object.keys(fillterMd).reverse().map((year: string) => {
				return (
					<section class="year-cont">
						<h1 class="title">{ year }</h1>
						<nav class="nav-cont">
							{fillterMd[year].map((item: navType) => {
								return (
									<div class="nav-item">
										<span>{formatDate(item.date).slice(5, 10)}</span>
										<a href={'/MyBlog'+item.url}>{item.title}</a> 
									</div>
								)
							})}
						</nav>

					</section>
				)
			})
		}
	</main>
</BaseLayout>

<style lang="scss">
	main {
		padding: 0 0 60px;
		position: relative;
	}
	.year-cont {
		position: relative;
		padding-bottom: 60px;
		width: 100%;
		&::before {
			position: absolute;
			content: "";
			left: 100px;
			width: 2px;
			height: 100%;
			background-color: var(--blackc);
		}
		.title {
			position: absolute;
			left: 0;
			top: 6px;
			font-size: 32px;
			font-weight: 400;
			line-height: 32px;
			margin-bottom: 10px;
			color: var(--fontcolor2);
		}
		.nav-cont {
			padding-left: 120px;
			.nav-item {
				display: flex;
				align-items: center;
				span {
					margin: 0 8px;
					color: var(--fontcolor3);
				}
				a {
					font-size: 16px;
					line-height: 32px;
					color: var(--fontcolor1);
					text-decoration: none;
					&:hover {
						color: var(--main-color);
						text-decoration: underline;
					}
				}
			}
			
		}
		&:last-of-type {
			padding-bottom: 30px;
		}
	}

	// 移动端适配
	@media screen and (max-width: 786px) {
		main {
			padding: 0 0 60px;
		}
		.year-cont {
			padding-bottom: 48px;
			padding-left: 10px;
			display: flex;
			flex-direction: column;
			&::before {
				left: 0;
				width: 1px;
			}
			.title {
				position: relative;
				margin-bottom: 20px;
				top: 0;
			}
			.nav-cont {
				padding-left: 24px;
				.nav-item {
					position: relative;
					margin-bottom: 8px;
					span {
						order: 2;
					}
					a {
						order: 1;
					}
					&::before {
						content: '';
						position: absolute;
						left: -14px;
						width: 6px;
						height: 6px;
						background-color: var(--fontcolor3);
						transform: rotateZ(45deg);
					}
				}
			}
			&:last-of-type {
				padding-bottom: 8px;
			}
		}
	}
</style>